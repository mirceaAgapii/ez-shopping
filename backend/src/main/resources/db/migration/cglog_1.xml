<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="1" author="mag">
        <createTable tableName="ez_user">
            <column name="id" type="serial"/>
            <column name="name" type="varchar(50)"/>
            <column name="email" type="varchar(50)"/>
            <column name="role" type="varchar(15)"/>
        </createTable>
        <createTable tableName="ez_role">
            <column name="role_id" type="varchar(15)"/>
        </createTable>
        <createTable tableName="ez_product">
            <column name="id" type="serial"/>
            <column name="name" type="varchar(50)"/>
            <column name="description" type="varchar(100)"/>
            <column name="price" type="number"/>
        </createTable>
        <createTable tableName="ez_locationtype">
            <column name="type_id" type="varchar(15)"/>
        </createTable>
        <createTable tableName="ez_location">
            <column name="id" type="serial"/>
            <column name="location_id" type="varchar(50)"/>
            <column name="type" type="varchar(15)"/>
        </createTable>
        <createTable tableName="ez_store">
            <column name="id" type="serial"/>
            <column name="address" type="varchar(100)"/>
        </createTable>
        <createTable tableName="ez_cart">
            <column name="id" type="serial"/>
            <column name="user_id" type="serial"/>
        </createTable>
        <createTable tableName="ez_stock">
            <column name="id" type="serial"/>
            <column name="location_type" type="varchar(15)"/>
            <column name="location_id" type="serial"/>
            <column name="product_id" type="serial"/>
            <column name="quantity" type="number"/>
        </createTable>

    </changeSet>
</databaseChangeLog>