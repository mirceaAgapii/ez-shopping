<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="2" author="mag">

        <addUniqueConstraint
                columnNames="role_id"
                tableName="ez_role"/>
        <addUniqueConstraint
                columnNames="type_id"
                tableName="ez_locationtype"/>
        <addUniqueConstraint
                columnNames="id"
                tableName="ez_location"/>
        <addUniqueConstraint
                columnNames="id"
                tableName="ez_store"/>
        <addUniqueConstraint
                columnNames="id"
                tableName="ez_cart"/>
        <addUniqueConstraint
                columnNames="id"
                tableName="ez_user"/>
        <addUniqueConstraint
                columnNames="id"
                tableName="ez_product"/>

        <addForeignKeyConstraint constraintName="fk_location2type"
                                 baseTableName="ez_location"
                                 baseColumnNames="type"
                                 referencedTableName="ez_locationtype"
                                 referencedColumnNames="type_id"/>
        <addForeignKeyConstraint constraintName="fk_stock2locationtype"
                                 baseTableName="ez_stock"
                                 baseColumnNames="location_type"
                                 referencedTableName="ez_locationtype"
                                 referencedColumnNames="type_id"/>
        <addForeignKeyConstraint constraintName="fk_store2location"
                                 baseTableName="ez_store"
                                 baseColumnNames="id"
                                 referencedTableName="ez_location"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint constraintName="fk_cart2location"
                                 baseTableName="ez_cart"
                                 baseColumnNames="id"
                                 referencedTableName="ez_location"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint constraintName="fk_user2role"
                                 baseTableName="ez_user"
                                 baseColumnNames="role"
                                 referencedTableName="ez_role"
                                 referencedColumnNames="role_id"/>
        <addForeignKeyConstraint constraintName="fk_stock2store"
                                 baseTableName="ez_stock"
                                 baseColumnNames="location_id"
                                 referencedTableName="ez_location"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint constraintName="fk_stock2product"
                                 baseTableName="ez_stock"
                                 baseColumnNames="product_id"
                                 referencedTableName="ez_product"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint constraintName="fk_cart2user"
                                 baseTableName="ez_cart"
                                 baseColumnNames="user_id"
                                 referencedTableName="ez_user"
                                 referencedColumnNames="id"/>


    </changeSet>
</databaseChangeLog>