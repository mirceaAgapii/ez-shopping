<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="2" author="mag">


        <addUniqueConstraint
                columnNames="id"
                tableName="ez_store"/>
        <addUniqueConstraint
                columnNames="id"
                tableName="ez_cart"/>
        <addPrimaryKey
                tableName="ez_cart"
                columnNames="id"/>

        <addPrimaryKey
                tableName="ez_store"
                columnNames="id"/>
        <addPrimaryKey
                tableName="ez_stock"
                columnNames="id"/>

        <addUniqueConstraint
                columnNames="id"
                tableName="ez_user"/>
        <addUniqueConstraint
                columnNames="username"
                tableName="ez_user"/>
        <addUniqueConstraint
                columnNames="email"
                tableName="ez_user"/>
        <addUniqueConstraint
                columnNames="id"
                tableName="ez_product"/>
        <addUniqueConstraint
                columnNames="barcode"
                tableName="ez_product"/>


        <addForeignKeyConstraint constraintName="fk_stock2product"
                                 baseTableName="ez_stock"
                                 baseColumnNames="product_id"
                                 referencedTableName="ez_product"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint constraintName="fk_product2cart_product"
                                 baseTableName="ez_cart_product"
                                 baseColumnNames="product_id"
                                 referencedTableName="ez_product"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint constraintName="fk_cart2cart_product"
                                 baseTableName="ez_cart_product"
                                 baseColumnNames="cart_id"
                                 referencedTableName="ez_cart"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint constraintName="fk_store2stock"
                                 baseTableName="ez_stock"
                                 baseColumnNames="store_id"
                                 referencedTableName="ez_store"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint constraintName="fk_cart2user"
                                 baseTableName="ez_cart"
                                 baseColumnNames="user_id"
                                 referencedTableName="ez_user"
                                 referencedColumnNames="id"/>


    </changeSet>
</databaseChangeLog>